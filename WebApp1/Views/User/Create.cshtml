@model WebApp1.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="col-md-4 mx-auto">
    <h1 class="text-center">Создание</h1>
    <div class="row">
        <form asp-action="Create" class="d-flex flex-column gap-3 method=" post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Почта</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiresAt" class="control-label">Истекает</label>
                <input asp-for="ExpiresAt" class="form-control" />
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary w-100" />
            </div>
        </form>

    </div>
    <div>
        <a asp-action="Index">Вернуться к списку</a>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
