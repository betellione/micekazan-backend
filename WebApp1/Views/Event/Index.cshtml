@model IEnumerable<WebApp1.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between mt-5 mb-3">
    <h1 class="d-block">Список событий</h1>
    <form asp-action="EventLoad" method="post">
    <div class="text-danger" role="alert"></div>
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning">Загрузить события</button>
    </div>
</form>
</div>
<partial name="_StatusMessage" for="@TempData["StatusMessage"]" />
<div class="table-responsive custom-table ">
    <table class="table table-dark table-hover align-middle">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FinishedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinishedAt)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
