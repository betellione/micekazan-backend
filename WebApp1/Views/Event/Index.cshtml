        <div>
            <button type="submit" class="w-100 btn btn-lg btn-warning">Загрузить события</button>
        </div>
    </form>*@
</div>
<partial name="_StatusMessage" for="@TempData["StatusMessage"]"/>
<div class="table-responsive custom-table mb-5">
    <table class="table table-dark table-hover align-middle">
        <thead>
            <th>
                <div class="table-col-header">Наименование</div>
            </th>
            <th>
                <div class="table-col-header">Город</div>
            </th>
            <th>
                <div class="table-col-header">Начало</div>
            </th>
            <th>
                <div class="table-col-header">Завершение</div>
            </th>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderByDescending(x => x.StartedAt))
        {
            <tr onclick="location.href='@Url.Action("Details", new { id = item.Id, })';">
                <td class="table-row">
                    <div class="table-col">@item.Name</div>
                </td>
                <td>
                    <div class="table-col">@item.City</div>
                </td>
                <td>
                    <div class="table-col">@item.StartedAt</div>
                </td>
                <td>
                    <div class="table-col">@item.FinishedAt</div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>