<ul class="navbar-nav flex-column">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a asp-controller="Manage" asp-action="Index" class="nav-link text-dark" title="Manage">Hello, @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="nav-link text-dark">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" class="nav-link text-dark">Login</a>
        </li>
    }
</ul>