@using WebApp1.Views.Manage
@{
    Layout = "_Layout";
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="@TempData["StatusMessage"]"/>
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-controller="Manage" asp-action="ResetAuthenticatorKey">reset your authenticator keys.</a>
    </p>
</div>
<div>
    <form asp-controller="Manage" asp-action="GenerateRecoveryCodesPost" method="post">
        <button class="btn btn-danger" type="submit">Generate Recovery Codes</button>
    </form>
</div>