@model UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-4 mx-auto">
    <h1 class="text-center">Редактирование</h1>
    <div class="row">
        <form asp-action="Edit" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Почта</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiresAt" class="control-label">Истекает</label>
                <input asp-for="ExpiresAt" class="form-control"/>
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary w-100"/>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Вернуться к списку</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}