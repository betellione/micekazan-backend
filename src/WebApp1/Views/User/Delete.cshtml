        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.ConcurrencyStamp) *@
            Метка конкуренции:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConcurrencyStamp)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.PhoneNumber) *@
