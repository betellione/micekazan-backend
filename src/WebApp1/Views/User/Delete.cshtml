@model WebApp1.Models.User

@{
    ViewData["Title"] = "Delete";
}

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.CreatedAt) *@
            Создано:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.ExpiresAt) *@
            Действует до:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpiresAt)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.UserName) *@
            Имя пользователя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.NormalizedUserName) *@
            Нормализованное имя пользователя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormalizedUserName)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Email) *@
            Почта:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.NormalizedEmail) *@
            Нормализованная почта:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NormalizedEmail)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.EmailConfirmed) *@
            Email подтвержден:
        </dt>
        <dd class="col-sm-10">
