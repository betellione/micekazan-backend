        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.PhoneNumberConfirmed) *@
            Номер телефона подтвержден:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumberConfirmed)
        </dd>
